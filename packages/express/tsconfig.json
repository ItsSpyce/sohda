{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/typings/**"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
